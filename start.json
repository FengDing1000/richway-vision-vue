{
    "apps": [
        {
            "name": "richwayweb",
            "script": "app.js",
            "exec_mode": "cluster",
            "instances": 3,
            "min_uptime": "100s",
            "max_restarts": 10,
            "max_memory_restart": "200M",
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "error_file"       : "logs/error.log",
            "out_file"         : "logs/out.log",
            "pid_file"         : "logs/node-geo-api.pid",
            "merge_logs": false,
            "autorestart": true,
            "vizion": true,
            "cron_restart": "1 0 * * *",
            "watch": false
        }
    ]
}
